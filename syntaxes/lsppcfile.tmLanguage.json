{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "LS-PrePost CFile",
    "scopeName": "source.lsprepost-cfile",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#commands"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.lsprepost",
                    "match": "^\\s*[cC]\\s+.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.lsprepost",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.lsprepost",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.lsprepost",
                    "match": "\\b\\d+(?:\\.\\d+)?\\b"
                }
            ]
        },
        "commands": {
            "patterns": [
                {
                    "name": "support.function.lsprepost",
                    "match": "^\\s*(?:ac|back|bottom|front|left|right|top|home|exit|t|redraw|restore|mesh|wire|grid|feat|shad|view|pall|parallel|perspective|shrink|zin|zout)\\b"
                },
                {
                    "name": "support.function.lsprepost",
                    "match": "^\\s*(?:anim\\s+(?:backward|cycle|forward|start|stop|first|last|incr))\\b"
                },
                {
                    "name": "support.function.lsprepost",
                    "match": "^\\s*(?:open\\s+(?:command|d3plot|d3thdt|keyword))\\b"
                },
                {
                    "name": "support.function.lsprepost",
                    "match": "^\\s*(?:state\\s+[+-]\\d+)\\b"
                },
                {
                    "name": "support.function.lsprepost",
                    "match": "^\\s*[+-]m\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.lsprepost",
                    "match": "[+-]"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.lsprepost",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}
